{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Helm Chart Values Schema",
  "type": "object",
  "properties": {
    "turtlesUI": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "imagePullPolicy": {
          "type": "string"
        }
      }
    },
    "namespace": {
      "type": "string"
    },
    "managerArguments": {
      "type": "array",
      "items": { "type": "string" }
    },
    "imagePullSecrets": {
      "type": "array",
      "items": { "type": "string" }
    },
    "rancherInstalled": {
      "type": "boolean"
    },
    "kubectlImage": {
      "type": "string"
    },
    "shellImage": {
      "type": "string"
    },
    "features": {
      "type": "object",
      "properties": {
        "agent-tls-mode": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        },
        "no-cert-manager": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "volumes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "configMap"],
        "properties": {
          "name": { "type": "string" },
          "configMap": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "volumeMounts": {
      "type": "object",
      "properties": {
        "manager": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "mountPath": { "type": "string" },
              "name": { "type": "string" },
              "readOnly": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "cluster-api-operator": {
      "type": "object",
      "properties": {
        "cleanup": {
          "type": "boolean"
        },
        "cluster-api": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "configSecret": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "defaultName": {
                  "type": "string"
                }
              }
            },
            "core": {
              "type": "object",
              "properties": {
                "namespace": {
                  "type": "string"
                },
                "imageUrl": {
                  "type": "string"
                },
                "fetchConfig": {
                  "type": "object",
                  "properties": {
                    "url": { "type": "string" },
                    "selector": { "type": "string" }
                  }
                },
                "enableAutomaticUpdates": {
                  "type": "boolean"
                },
                "version": {
                  "type": "string"
                }
              }
            },
            "rke2": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "version": {
                  "type": "string"
                },
                "enableAutomaticUpdates": {
                  "type": "boolean"
                },
                "bootstrap": {
                  "type": "object",
                  "properties": {
                    "namespace": { "type": "string" },
                    "imageUrl": { "type": "string" },
                    "fetchConfig": {
                      "type": "object",
                      "properties": {
                        "url": { "type": "string" },
                        "selector": { "type": "string" }
                      }
                    }
                  }
                },
                "controlPlane": {
                  "type": "object",
                  "properties": {
                    "namespace": { "type": "string" },
                    "imageUrl": { "type": "string" },
                    "fetchConfig": {
                      "type": "object",
                      "properties": {
                        "url": { "type": "string" },
                        "selector": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
